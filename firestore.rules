rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if user is owner of resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ==========================================================
    // PUBLIC COLLECTIONS (Global Feed)
    // ==========================================================

    // Posts: Public Read, Auth Write
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Post Comments
      match /comments/{commentId} {
        allow read: if true;
        allow write: if isAuthenticated();
      }
    }
    
    // Meetups: Public Read, Auth Write
    match /meetups/{meetupId} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Meetup Comments
      match /comments/{commentId} {
        allow read: if true;
        allow write: if isAuthenticated();
      }
    }
    
    // Jobs: Public Read, Auth Write
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Marketplace: Public Read, Auth Write
    match /marketplace/{itemId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Questions (QnA): Public Read, Auth Write
    match /questions/{questionId} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Answers
      match /answers/{answerId} {
        allow read: if true;
        allow write: if isAuthenticated();
      }
    }

    // ==========================================================
    // USER DATA
    // ==========================================================
    
    match /users/{userId} {
      allow read: if true; // Profiles are public
      
      // A user can fully update their own profile
      // OR another user can ONLY update the 'followers' and 'following' lists
      allow write: if isAuthenticated() && (
        isOwner(userId) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followers', 'following'])
        )
      );
      
      // Allow anyone logged in to send a notification to others
      match /notifications/{notificationId} {
        allow read: if request.auth != null && isOwner(userId);
        allow write: if isAuthenticated();
      }
    }

    // ==========================================================
    // PRIVATE / CHAT
    // ==========================================================

    match /conversations/{conversationId} {
      // Only participants can read/write
      allow read, write: if isAuthenticated() && (request.auth.uid in resource.data.participantIds || request.auth.uid in request.resource.data.participantIds);
      
      match /messages/{messageId} {
        // We rely on parent conversation access mostly, but can double check
        allow read, write: if isAuthenticated();
      }
    }

    // ==========================================================
    // DEFAULT CATCH-ALL
    // ==========================================================
    // match /{document=**} {
    //   allow read, write: if false;
    // }
  }
}
